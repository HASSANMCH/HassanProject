
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>
@if (User != null)
{
    <table id="usersTable" class="display table-bordered fw-bold" style="width:100%">
        <thead class="text-black">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>City</th>
                <th>Email</th>
                <th>Verified Account</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
}
else
{
    <p>No user details available.</p>
}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                "ajax": {
                    "url": "/UserDetails/GetUsers",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "firstName" },
                    { "data": "lastName" },
                    { "data": "address" },
                    { "data": "phoneNumber" },
                    { "data": "city" },
                    { "data": "email" },
                    { "data": "emailConfirmed" },
                    {
                        "data": null,
                        "render": function (data, type, row) 
                        {
                            return `
                                        <a href="/UserDetails/Edit/${row.id}" class="btn btn-primary">Edit</a>
                                        <a href="/UserDetails/Delete/${row.id}" class="btn btn-danger ">Delete</a>
                            `;
                        }
                    }
                ],
                "error": function (xhr, error, thrown) {
                    console.error("Error fetching data: ", error);
                    console.error("Response: ", xhr.responseText);
                },
                "initComplete": function (settings, json) {
                    console.log("Data fetched successfully", json);
                }
            });
        });
    </script>
}

 


